{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Chat SaaS",
  "version": "0.1.0",
  "identifier": "com.chatsaas.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3010",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../.next"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Chat SaaS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "SocialNetworking",
    "shortDescription": "Multi-tenant chat platform",
    "longDescription": "A multi-tenant chat SaaS platform that allows hosts to create and manage their own branded chat communities.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "autostart": {
      "macOSExtraArgs": ["--minimized"]
    }
  }
}
